{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/main.ts",
    "src/App.svelte",
    "src/components/**/*.svelte",
    "scripts/*.ts",
    "tests/*.ts",
    "generate-blog-images.ts"
  ],
  "project": ["src/**/*.{ts,svelte}", "scripts/**/*.ts", "tests/**/*.ts"],
  "ignore": [
    "public/**/*",
    "src/lib/config.ts",
    "src/stores/posts.ts",
    "src/lib/utils.ts",
    "src/lib/markdown.ts"
  ],
  "ignoreDependencies": [
    "@playwright/test",
    "@rollup/plugin-dsv",
    "vite-plugin-raw",
    "@biomejs/biome",
    "pre-commit"
  ],
  "ignoreBinaries": ["code-index-mcp"]
}
