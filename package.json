{
	"name": "wintrover-blog",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"build:github": "vite build --base=/blog/",
		"preview:github": "vite preview --base=/blog/",
		"deploy:github": "npm run build:github && tsx deploy-github.ts",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"post:devto": "tsx scripts/post-to-dev.ts",
		"mcp:code-index": "code-index-mcp",
		"typecheck": "tsc --noEmit",
		"lint": "uvx prek run --all-files",
		"stryker": "stryker run",
		"knip": "knip",
		"depcruise": "depcruise src"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@j178/prek": "^0.2.25",
		"@stryker-mutator/core": "^9.4.0",
		"@stryker-mutator/typescript-checker": "^9.4.0",
		"@stryker-mutator/vitest-runner": "^9.4.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@tsconfig/svelte": "^5.0.6",
		"@types/node": "^25.0.3",
		"@vitest/coverage-istanbul": "^4.0.16",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"dependency-cruiser": "^17.3.5",
		"jsdom": "^27.4.0",
		"knip": "^5.78.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite": "^5.0.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@playwright/test": "^1.54.2",
		"@rollup/plugin-dsv": "^3.0.5",
		"dotenv": "^17.2.1",
		"gray-matter": "^4.0.3",
		"marked": "^12.0.0",
		"mermaid": "^11.9.0",
		"puppeteer": "^24.26.1",
		"svelte": "^4.0.0",
		"svelte-spa-router": "^4.0.1",
		"vite-plugin-raw": "^1.0.3"
	}
